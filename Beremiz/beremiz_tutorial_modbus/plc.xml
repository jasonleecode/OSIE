        <body>
          <ST>
            <xhtml:p><![CDATA[IF Reset THEN
  Cnt0 := ResetCounterValue;
  Cnt1 := ResetCounterValue;
  Reset := False;
ELSE
  Cnt0 := Cnt0 + 1;
  Cnt1 := Cnt1 + 1;
  IF Cnt1 > 10 THEN
    Relay0Value := True;
    Relay1Value := True;
  ELSE
    Relay0Value := True;
    Relay1Value := False;
  END_IF;
  
  IF Cnt1 > 15 THEN
    Relay1Value := False;
    Cnt1 :=0;
  END_IF;
  
END_IF;

Out1 := Cnt1;
Out0 := Cnt0;]]></xhtml:p>
          </ST>
